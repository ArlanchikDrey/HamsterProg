<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_marginTop="30dp"
        app:cardElevation="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/themeViewReplace"
                    android:layout_width="52dp"
                    android:layout_height="55dp"
                    android:src="@drawable/test2"/>

                <TextView
                    android:id="@+id/headNameReplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/themeViewReplace"
                    android:layout_toStartOf="@id/imageArrow"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textColor="#0a0a0a"
                    android:layout_marginLeft="10dp"
                    android:text="Основныb трggины" />

                <ImageView
                    android:id="@+id/imageArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/headNameReplace"
                    android:layout_marginTop="5dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

                <TextView
                    android:id="@+id/textCompled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/headNameReplace"
                    android:layout_below="@id/headNameReplace"
                    android:layout_marginTop="3dp"
                    android:textColor="#495365"
                    android:textSize="13sp" />

            </RelativeLayout>

                <ImageButton
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:id="@+id/btnImageView"
                    android:layout_width="match_parent"
                    android:src="@drawable/open"
                    android:layout_height="160dp"
                    android:scaleType="fitXY" />




        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>

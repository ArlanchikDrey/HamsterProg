<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/condTextTest"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2D264F"
        android:gravity="center"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Какое число выведет программа?"/>
    <TextView
        android:id="@+id/condVariables"
        android:layout_marginTop="40dp"
        android:layout_below="@id/condTextTest"
        android:layout_marginLeft="10dp"
        android:textColor="#2D264F"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textCondIfelseTest"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@id/condVariables"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn_height"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_width"
        android:layout_marginStart="18dp"
        android:background="@drawable/button_style_gray"
        android:text="10.54"
        android:textColor="#2D264F"
        />
    <Button
        android:id="@+id/btn_width"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/button_style_gray"
        android:text="10.23"
        android:textColor="#2D264F"
        />
</RelativeLayout>
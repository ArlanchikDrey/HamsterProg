<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tedfcsвсвсefedcdcf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="Что выведет данная программа?"
                android:textColor="#2D264F"
                android:textSize="20sp" />
            <RelativeLayout
                android:id="@+id/testFun22"
                android:layout_below="@id/tedfcsвсвсefedcdcf"
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textFunTest22"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <EditText
                android:id="@+id/editTextFunTest22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:ems="6"
                android:maxLength="6"
                android:gravity="center"
                android:layout_below="@id/testFun22"
                android:inputType="textPersonName"
                />
            <Button
                android:id="@+id/onNextTestFun222"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:layout_below="@id/editTextFunTest22"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/whatIsTypeVariable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2D264F"
                android:textSize="21sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34dp"
                android:text="Типы данных" />

            <TextView
                android:id="@+id/textInteger"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/whatIsTypeVariable"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#2D264F"
                android:text="@string/aboutType1"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/myExample"
                android:layout_below="@id/textInteger"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D4D1E6"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/textInteger2"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/integer"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/aboutTYpes"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/myExample"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#2D264F"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/myExample2"
                android:layout_below="@id/aboutTYpes"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D4D1E6"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textManyTypes"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/integer"/>

            </RelativeLayout>


            <Button
                android:id="@+id/onNextType2"
                android:layout_width="120dp"
                android:layout_below="@+id/myExample2"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textAboutLoop"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#2D264F"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textWhileHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/textAboutLoop"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Цикл While"
                android:textColor="#2D264F"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textAboutWhile"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:textColor="#2D264F"
                android:layout_below="@id/textWhileHead"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/loopExample"
                android:layout_below="@id/textAboutWhile"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textWhileExample"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/fegfervs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loopExample"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="Выражение x++ инкрементирует переменную x каждый раз при запуске цикла."
                android:textColor="#2D264F"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/headDoWhile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/fegfervs"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Цикл do...while"
                android:textColor="#2D264F"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/textAboutDoWhile"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#2D264F"
                android:text="Отличие данного цикла в том, что даже при ложном условии код гарантированно запустится один раз."
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:layout_below="@id/headDoWhile"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/dowhile"
                android:layout_below="@id/textAboutDoWhile"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textDoWhileExample"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/onNextTestWhile"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:layout_below="@id/dowhile"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textAboutFun"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#2D264F"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textFunAnnounce"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:text="Объявление функции имеет следующую структуру:"
                android:textSize="17sp"
                android:textColor="#2D264F"
                android:layout_below="@id/textAboutFun"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/funAnnounceExampleRel"
                android:layout_below="@id/textFunAnnounce"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/funAnnounceExample"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/aboutFunTypeReturn"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:textColor="#2D264F"
                android:layout_below="@id/funAnnounceExampleRel"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/funVoid"
                android:layout_below="@id/aboutFunTypeReturn"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/funVoidExample"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>


            <Button
                android:id="@+id/onNextTestFun"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:layout_below="@id/funVoid"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/condTextMain"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2D264F"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Операции сравнения"/>

            <TextView
                android:id="@+id/condTextSravn"
                android:layout_below="@id/condTextMain"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/condTextIf"
                android:layout_marginTop="35dp"
                android:layout_below="@id/condTextSravn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2D264F"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Выражение if"/>

            <TextView
                android:id="@+id/condTextAboutIf"
                android:layout_below="@id/condTextIf"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/myExampleCond1"
                android:layout_below="@id/condTextAboutIf"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D4D1E6"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textCondIf"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/condTextIfElse"
                android:layout_marginTop="35dp"
                android:layout_below="@id/myExampleCond1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2D264F"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Операторы if...else"/>

            <TextView
                android:id="@+id/condTextAboutIfElse"
                android:layout_below="@id/condTextIfElse"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="После оператора if может следовать оператор else, который выполняется, когда условие оказывается ложным."
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:id="@+id/myExampleCond2"
                android:layout_below="@id/condTextAboutIfElse"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#D4D1E6"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textCondIfelse"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/onNextCond"
                android:layout_width="120dp"
                android:layout_below="@+id/myExampleCond2"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
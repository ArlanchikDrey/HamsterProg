<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textForHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Цикл For"
        android:textColor="#2D264F"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textAboutFor"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:textSize="17sp"
        android:text="Данный цикл позволяет вам эффективно создавать циклы, которые должны быть запущены определенное количество раз."
        android:textColor="#2D264F"
        android:layout_below="@id/textForHead"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/loopExampl334e"
        android:layout_below="@id/textAboutFor"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#CFE3E8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textForExample"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/onNextTestFor"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Далее"
        android:layout_below="@id/loopExampl334e"
        android:textColor="#fcfcfc"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_style_welcome_white" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textAboutArray"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#2D264F"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:text=""
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/textAboutArrayJava"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginTop="26dp"
                android:textSize="17sp"
                android:textColor="#2D264F"
                android:text="Чтобы обьявить массив, в большинстве языков программирования вам необходимо определить тип элемента с квадратными скобками"
                android:layout_below="@id/textAboutArray"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/ArrayExample"
                android:layout_below="@id/textAboutArrayJava"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textArrayExample"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#2D264F"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/fegfervsedv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ArrayExample"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:textColor="#2D264F"
                android:text="@string/aboutExampleArray"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/ArrayExampleJava"
                android:layout_below="@id/fegfervsedv"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#CFE3E8"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textArrayExampleJava"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#2D264F"
                    android:layout_marginLeft="15dp"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/onNextArray"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Далее"
                android:layout_below="@id/ArrayExampleJava"
                android:textColor="#fcfcfc"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style_welcome_white" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
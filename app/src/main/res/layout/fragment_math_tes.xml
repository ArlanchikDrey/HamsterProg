<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mathTest1"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#2D264F"
        android:textSize="20sp"
        android:text="Заполните пустые места, чтобы выполнить умножение  x на y."
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mathTestCheck1"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_below="@id/mathTest1"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="50dp"
        android:textColor="#2D264F"
        android:textSize="20sp"
        android:text="@string/mathsd"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mathTestCheck1"
        android:layout_toRightOf="@+id/mathTestCheck1"
        android:text="x"
        android:layout_marginBottom="1dp"
        android:textColor="#2D264F"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mathTestCheck1"
        android:layout_toEndOf="@+id/textX"
        android:background="@android:color/transparent"
        android:ems="1"
        android:maxLength="1"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="_" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_alignBottom="@+id/mathTestCheck1"
        android:layout_toRightOf="@+id/editText"
        android:text="y"
        android:textColor="#2D264F"
        android:textSize="20sp" />
    <Button
        android:id="@+id/onNextMathTest1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Ответить"
        android:textColor="#fcfcfc"
        android:background="@drawable/button_style_welcome_white" />




</RelativeLayout>
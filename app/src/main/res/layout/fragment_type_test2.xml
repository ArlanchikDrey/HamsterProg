<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#2D264F"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Заполните пустые места" />

    <TextView
        android:id="@+id/textBoolState"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textTest"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="_____"
        android:textColor="#378A14"/>

    <TextView
        android:id="@+id/idText123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textBoolState"
        android:layout_toRightOf="@id/textBoolState"
        android:layout_marginLeft="10dp"
        android:textColor="#2D264F"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textCharState"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textBoolState"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:textColor="#2D264F"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=""
       />

    <TextView
        android:id="@+id/textDoubleState"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textCharState"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="_____"
        android:textColor="#378A14"/>

    <TextView
        android:id="@+id/idText12334"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textDoubleState"
        android:layout_toRightOf="@id/textDoubleState"
        android:layout_marginLeft="10dp"
        android:textColor="#2D264F"
        android:textSize="20sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fcfcfc"
        app:cardCornerRadius="3dp"
        android:layout_above="@id/onNextType3"
        android:layout_marginBottom="20dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#378A14"
                android:text="double"/>
            <TextView
                android:id="@+id/textBool"
                android:textColor="#378A14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:text="bool"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/onNextType3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Ответить"
        android:textColor="#fcfcfc"
        android:background="@drawable/button_style_welcome_white" />
</RelativeLayout>